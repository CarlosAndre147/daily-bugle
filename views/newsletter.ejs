<%- include('partials/header.ejs'); -%>

<h1 class="h3 mb-3 fw-normal text-center">Signup to My Newsletter</h1>
<form action="/newsletter" method="post">
    <div class="mb-3">
        <label for="postTitle">First Name</label>
        <input type="text" name="fName" class="form-control" id="postTitle" size="158">
    </div>
    <br>
    <div class="mb-3">
        <label for="postBody">Last name</label>
        <input type="text" class="form-control middle" name="lName" autofocus>
    </div>
    <br>
    <div class="mb-3">
        <label for="postBody">Email</label>
        <input type="email" class="form-control bottom" name="email" placeholder="name@example.com"> 
    </div>
    <br>
    <button type="submit" class="btn btn-danger">Sign me up</button>
</form>
</main>

