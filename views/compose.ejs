<%- include('partials/header.ejs'); -%>

<h1 class="postTitle">Compose</h1>

<form action="/compose" method="post" class="form">
    <div class="mb-3">
        <label for="postTitle">Title</label>
        <input type="text" name="postTitle" class="form-control" id="postTitle" size="158">
    </div>
    <br>
    <div class="mb-3">
        <label for="postBody">Post</label>
        <textarea name="postBody" class="form-control" id="postBody" cols="160" rows="7"></textarea>
    </div>
    <br>
    <button type="submit" class="btn btn-danger">Publish</button>
</form>

<%- include('partials/footer.ejs'); -%>